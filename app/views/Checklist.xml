<Alloy>
	<!-- This creates a global instance of a collection based on the cars model 
	     We can now access this instance using the following code:
	     Allow.Collection.cars -->
	<Collection src="checklist"/>
	<Window id="checklistWindow">
		<TableView dataCollection="checklist" dataTransform="transform" dataFilter="filter">
			<TableViewRow title="{title}" modelId="{id}" />
		</TableView>
	</Window>
</Alloy>